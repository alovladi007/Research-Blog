# Database
DATABASE_URL="postgresql://user:password@localhost:5433/scholar_hub"

# Authentication
NEXTAUTH_URL="http://localhost:3200"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"

# Development Mode - Bypass Authentication
# Set to "true" to skip login and use a mock user (development only)
# Set to "false" to require normal authentication
BYPASS_AUTH="true"
NEXT_PUBLIC_BYPASS_AUTH="true"

# Email Configuration (for verification)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="ScholarHub <noreply@scholarhub.com>"

# JWT Secret
JWT_SECRET="your-jwt-secret-here"

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="scholar-hub"

# Redis (for caching and real-time)
REDIS_URL="redis://localhost:6380"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# API Keys
OPENAI_API_KEY="" # For AI features
SEMANTIC_SCHOLAR_API_KEY="" # For paper search